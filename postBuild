git clone https://github.com/ngsxfem/ngsxfem.git .ngsxfem
cd .ngsxfem
        
INSTLOCATION=/home/jovyan/.local
        
mkdir build
cd build

cmake ../ -DCMAKE_INSTALL_PREFIX=${INSTLOCATION} -DBUILD_NGSOLVE=OFF -DCMAKE_CXX_COMPILER=ngscxx -DCMAKE_LINKER=ngsld -DUSE_GUI=OFF
make
make install

export PYTHONPATH="$PYTHONPATH:${INSTLOCATION}/lib/python3.8/site-packages:/home/jovyan/.local/lib/python3.7/site-packages"
        
